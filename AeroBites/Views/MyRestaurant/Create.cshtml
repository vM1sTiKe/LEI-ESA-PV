@model AeroBites.Models.Restaurant

@{
    ViewData["Title"] = "Criar Restaurante";
    ViewData["CurrentPage"] = Enums.CurrentPage.MyRestaurant;
}

<div class="content-myrestaurant">
    <h1>Parece que não tem um restaurante seu, quer pedir para criar um?</h1>
    <form asp-action="Create" class="app-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="app-form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="app-form-group">
            <input type="submit" value="Create" class="app-button app-color-green" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}