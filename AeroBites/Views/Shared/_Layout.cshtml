@using System.Security.Claims

<!DOCTYPE html>

<html>
    <head>
        <title>@ViewData["Title"]</title>
        <link rel="stylesheet" href="/css/main.css"/>
    @* Icons - https://fontawesome.com/icons *@
    </head>
    <body>
        <div class="app-body">
            <div class="app-navbar">
                <div>
                    <img class="app-logo" src="~/images/logo.png"/>
                    <div class="app-actions">

                        @if (User.FindFirstValue("IsAdmin").Equals("True"))
                        {
                            <div class="app-action-admin">
                                <a asp-action="Index" asp-controller="Admin" data-current-page=@AeroBites.Enums.CurrentPage.Admin.Equals(ViewData["CurrentPage"]) class="app-action icon clickable">
                                    <svg viewBox="0 0 448 512"><path d="M96 128a128 128 0 1 0 256 0A128 128 0 1 0 96 128zm94.5 200.2l18.6 31L175.8 483.1l-36-146.9c-2-8.1-9.8-13.4-17.9-11.3C51.9 342.4 0 405.8 0 481.3c0 17 13.8 30.7 30.7 30.7l131.7 0c0 0 0 0 .1 0l5.5 0 112 0 5.5 0c0 0 0 0 .1 0l131.7 0c17 0 30.7-13.8 30.7-30.7c0-75.5-51.9-138.9-121.9-156.4c-8.1-2-15.9 3.3-17.9 11.3l-36 146.9L238.9 359.2l18.6-31c6.4-10.7-1.3-24.2-13.7-24.2L224 304l-19.7 0c-12.4 0-20.1 13.6-13.7 24.2z" /></svg>
                                </a>
                            </div>
                        }

                        <a data-current-page=@AeroBites.Enums.CurrentPage.Restaurant.Equals(ViewData["CurrentPage"]) class="app-action icon clickable">
                            <svg viewBox="0 0 448 512"><path d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512l388.6 0c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304l-91.4 0z" /></svg>
                        </a>
                    
                    </div>
                </div>
            </div>
            <main class="app-content">
                @RenderBody()
            </main>
        </div>
    </body>
</html>